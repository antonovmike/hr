<odoo>
    <!-- Actions -->
    <record id="action_view_patients" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_doctors" model="ir.actions.act_window">
        <field name="name">View Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_visits" model="ir.actions.act_window">
        <field name="name">View Visits</field>
        <field name="res_model">hr_hospital.visits</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_person" model="ir.actions.act_window">
        <field name="name">View Persons</field>
        <field name="res_model">hr_hospital.person</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_diagnosis" model="ir.actions.act_window">
        <field name="name">View Diagnosis</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_doctor_schedule" model="ir.actions.act_window">
        <field name="name">View Schedule</field>
        <field name="res_model">hr_hospital.doctor_schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
    <record id="action_view_doctor_history" model="ir.actions.act_window">
        <field name="name">View Doctor History</field>
        <field name="res_model">hr_hospital.doctor_history</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <!-- Representations for model Doctor's History -->
    <record id="doctor_history_tree" model="ir.ui.view">
        <field name="name">Doctor's History Tree</field>
        <field name="model">hr_hospital.doctor_history</field>
        <field name="arch" type="xml">
            <tree string="Doctor's History">
                <field name="appointment_date"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="doctor_history_form" model="ir.ui.view">
        <field name="name">Doctor's History Form</field>
        <field name="model">hr_hospital.doctor_history</field>
        <field name="arch" type="xml">
            <form string="Doctor's History">
                <sheet>
                    <group>
                        <field name="appointment_date"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Representations for model Doctor's Schedule -->
    <record id="doctor_schedule_tree" model="ir.ui.view">
        <field name="name">Doctor's Schedule Tree</field>
        <field name="model">hr_hospital.doctor_schedule</field>
        <field name="arch" type="xml">
            <tree string="Doctor's Schedule">
                <field name="doctor_id"/>
                <field name="date_time"/>
            </tree>
        </field>
    </record>

    <!-- Representations for model Patients -->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">Patients Tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="person_id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="passport_details"/>
                <field name="contact_person"/>
                <field name="personal_doctor_id"/>
            </tree>
        </field>
    </record>
    <record id="patient_form" model="ir.ui.view">
        <field name="name">Patients Form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <field name="person_id"/>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="passport_details"/>
                        <field name="contact_person"/>
                        <field name="personal_doctor_id" string="Personal Doctor"/>
                        <field name="doctor_id" string="Appointment to Dr"/>
                        <field name="date_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Representations for model Doctors -->
    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">Doctors Tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="is_intern"/>
                <field name="mentor_doctor_id"/>
            </tree>
        </field>
    </record>
    <record id="doctor_form" model="ir.ui.view">
        <field name="name">Doctors Form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctors">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="is_intern"/>
                        <field name="mentor_doctor_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Representations for model Visits -->
    <record id="visit_tree" model="ir.ui.view">
        <field name="name">Visits Tree</field>
        <field name="model">hr_hospital.visits</field>
        <field name="arch" type="xml">
            <tree string="Visits">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis_ids" widget="many2many_tags"/>
                <field name="description"/>
                <field name="date"/>
                <field name="appointment_is_done" />
            </tree>
        </field>
    </record>
    <record id="visit_form" model="ir.ui.view">
        <field name="name">Visits Form</field>
        <field name="model">hr_hospital.visits</field>
        <field name="arch" type="xml">
            <form string="Visits">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="diagnosis_ids" widget="many2many_tags"/>
                        <field name="description"/>
                        <field name="date"/>
                        <field name="appointment_is_done" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Representations for model Person -->
    <record id="person_tree" model="ir.ui.view">
        <field name="name">Person Tree</field>
        <field name="model">hr_hospital.person</field>
        <field name="arch" type="xml">
            <tree string="Person">
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="photo"/>
            </tree>
        </field>
    </record>
    <record id="person_form" model="ir.ui.view">
        <field name="name">Person Form</field>
        <field name="model">hr_hospital.person</field>
        <field name="arch" type="xml">
            <form string="Person">
                <sheet>
                    <group>
                        <field name="last_name"/>
                        <field name="first_name"/>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="photo" widget="image" filename="photo" class="img_edit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Representations for model Diagnosis -->
    <record id="diagnosis_tree" model="ir.ui.view">
        <field name="name">Diagnosis Tree</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree string="Diagnosis">
                <field name="date_of_diagnosis"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="disease_id"/>
                <field name="treatment"/>
                <field name="mentor_doctor_id"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <record id="diagnosis_form" model="ir.ui.view">
        <field name="name">Diagnosis Form</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnosis">
                <sheet>
                    <group>
                        <field name="date_of_diagnosis"/>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                        <field name="disease_id"/>
                        <field name="treatment"/>
                        <field name="mentor_doctor_id"/>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>