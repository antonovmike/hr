<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Representations for model Users -->

    <record id="user_tree" model="ir.ui.view">
        <field name="name">Users Tree</field>
        <field name="model">hr_beauty_salon.user</field>
        <field name="arch" type="xml">
            <tree string="User">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="user_form" model="ir.ui.view">
        <field name="name">Users Form</field>
        <field name="model">hr_beauty_salon.user</field>
        <field name="arch" type="xml">
            <form string="Users">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
